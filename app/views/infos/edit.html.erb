<h2><%= @info.new_record? ? "Create Info" : "Edit Info" %></h2>

<%= form_with model: @info, local: true do |f| %>
  <div>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
