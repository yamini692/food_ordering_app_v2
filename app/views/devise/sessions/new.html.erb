<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h2 class="mb-4 text-center">Login</h2>

      <%= form_with url: new_user_session_path, method: :post, local: true, class: "needs-validation" do |f| %>
        <div class="mb-3">
          <%= label_tag :email, "Email", class: "form-label" %>
          <%= email_field_tag "user[email]", nil, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= label_tag :password, "Password", class: "form-label" %>
          <%= password_field_tag "user[password]", nil, required: true, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= submit_tag "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <hr class="my-4">

      <h4 class="text-center">Register as</h4>
      <div class="text-center">
        <%= link_to "Customer", new_customer_registration_path, class: "btn btn-outline-success me-2 mt-2" %>
        <%= link_to "Restaurant", new_restaurant_registration_path, class: "btn btn-outline-info mt-2" %>
      </div>

    </div>
  </div>
</div>
